{
  "name": "@celo-automator/celo-functions",
  "version": "2.0.0",
  "description": "Modular Celo blockchain function library",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rimraf dist",
    "type-check": "tsc --noEmit",
    "lint": "tsc --noEmit",
    "test": "vitest run"
  },
  "dependencies": {
    "@celo-automator/types": "workspace:*",
    "@celo/contractkit": "^9.0.0",
    "viem": "^2.21.45",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "rimraf": "^6.1.0",
    "typescript": "^5.3.0",
    "vitest": "^1.6.0"
  }
}
