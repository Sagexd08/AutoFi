# =============================================================================
# AUTOFI BACKEND ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your values

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL="postgresql://postgres:password@localhost:5432/autofi?schema=public"

# =============================================================================
# REDIS (for BullMQ job queue)
# =============================================================================
REDIS_URL="redis://localhost:6379"

# =============================================================================
# SERVER
# =============================================================================
PORT=3000
HOST=localhost
NODE_ENV=development

# =============================================================================
# SECURITY
# =============================================================================
# JWT secret for authentication (minimum 32 characters)
JWT_SECRET="your-super-secret-jwt-key-min-32-chars"

# Webhook signing secret for outbound webhooks
WEBHOOK_SECRET="your-webhook-signing-secret"

# API rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# BLOCKCHAIN RPC ENDPOINTS
# =============================================================================
# Celo
CELO_RPC_URL="https://forno.celo.org"
CELO_TESTNET_RPC_URL="https://alfajores-forno.celo-testnet.org"
CELO_NETWORK="mainnet"
CELO_PRIVATE_KEY=""

# Ethereum
ETHEREUM_RPC_URL="https://eth.llamarpc.com"
ETHEREUM_TESTNET_RPC_URL="https://rpc.sepolia.org"

# Polygon
POLYGON_RPC_URL="https://polygon.llamarpc.com"
POLYGON_TESTNET_RPC_URL="https://rpc-mumbai.maticvigil.com"

# Arbitrum
ARBITRUM_RPC_URL="https://arb1.arbitrum.io/rpc"
ARBITRUM_TESTNET_RPC_URL="https://sepolia-rollup.arbitrum.io/rpc"

# Optimism
OPTIMISM_RPC_URL="https://mainnet.optimism.io"
OPTIMISM_TESTNET_RPC_URL="https://sepolia.optimism.io"

# Base
BASE_RPC_URL="https://mainnet.base.org"
BASE_TESTNET_RPC_URL="https://sepolia.base.org"

# Avalanche
AVALANCHE_RPC_URL="https://api.avax.network/ext/bc/C/rpc"
AVALANCHE_TESTNET_RPC_URL="https://api.avax-test.network/ext/bc/C/rpc"

# BSC
BSC_RPC_URL="https://bsc-dataseed.binance.org"
BSC_TESTNET_RPC_URL="https://data-seed-prebsc-1-s1.binance.org:8545"

# =============================================================================
# AI SERVICES
# =============================================================================
# Google Gemini API
GEMINI_API_KEY=""

# OpenAI (optional fallback)
OPENAI_API_KEY=""

# =============================================================================
# RISK ENGINE
# =============================================================================
# Maximum allowed risk score (0-1, transactions above this are blocked)
MAX_RISK_SCORE=0.95

# Risk score threshold requiring approval (0-1)
APPROVAL_THRESHOLD=0.6

# Risk score threshold for automatic blocking (0-1)
BLOCK_THRESHOLD=0.85

# =============================================================================
# SPENDING LIMITS (in wei)
# =============================================================================
DEFAULT_DAILY_LIMIT="1000000000000000000000"
DEFAULT_PER_TX_LIMIT="100000000000000000000"

# =============================================================================
# NOTIFICATIONS
# =============================================================================
# Slack webhook for alerts
SLACK_WEBHOOK_URL=""

# Email configuration (optional)
SMTP_HOST=""
SMTP_PORT=587
SMTP_USER=""
SMTP_PASS=""
SMTP_FROM="noreply@autofi.io"

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=debug
LOG_FORMAT=pretty

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Block explorer API keys (for transaction verification)
ETHERSCAN_API_KEY=""
CELOSCAN_API_KEY=""
POLYGONSCAN_API_KEY=""
